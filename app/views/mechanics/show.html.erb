<h1><%= @mechanic.name %></h1>
<h3>Year of Experience: <%= @mechanic.years_of_experience %></h3>

<h4>Rides Being Worked On</h4>
<% @mechanic.rides.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<h4>Add Ride to Workload</h4>

<%= form_tag("/mechanics/#{@mechanic.id}", method: :post) do %>
  <%= label_tag :ride_id %>
  <%= text_field_tag :ride_id %>

  <%= submit_tag('Submit') %>
<% end %>
